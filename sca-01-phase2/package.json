{
  "name": "sca-01-phase2",
  "version": "0.2.0",
  "description": "SCA-01 'The Finisher' Phase 2 - Desktop Agent with full PC access",
  "private": true,
  "type": "module",
  "main": "build/main/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:ui": "tsc && electron build/ui/main.js",
    "dev:cockpit": "tsc && electron build/ui/mainCockpit.js",
    "dev:chat": "tsc && electron build/ui/mainChat.js",
    "build": "tsc -p tsconfig.json && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs');const path=require('path');['html','cjs','css'].forEach(ext=>{const src='src/ui';const dst='build/ui';fs.readdirSync(src).filter(f=>f.endsWith('.'+ext)).forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dst,f)))});\"",
    "build:ui": "tsc -p tsconfig.ui.json && electron-builder",
    "lint": "eslint .",
    "test": "vitest run",
    "sca": "node build/cli.js",
    "start": "electron build/ui/main.js",
    "cockpit": "electron build/ui/mainCockpit.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.35.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "electron-store": "^10.0.0",
    "execa": "^9.5.0",
    "open": "^10.1.0",
    "puppeteer-core": "^23.0.0",
    "systeminformation": "^5.25.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "build": {
    "appId": "com.clak.sca-01",
    "productName": "SCA-01 The Finisher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    }
  }
}

