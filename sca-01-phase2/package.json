{
  "name": "sca-01-phase2",
  "version": "0.2.0",
  "description": "SCA-01 'The Finisher' Phase 2 - Desktop Agent with full PC access",
  "author": "Clauskraft",
  "private": true,
  "type": "module",
  "main": "build/ui/main.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:renderer": "vite --config vite.config.ts",
    "build": "tsc -p tsconfig.json && npm run build:preload && npm run build:renderer",
    "build:preload": "node build-preload.js",
    "build:renderer": "vite build --config vite.config.ts",
    "build:ui": "npm run build && electron-builder",
    "build:ui:dir": "npm run build && electron-builder --win --dir",
    "lint": "eslint .",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "sca": "node build/cli.js",
    "start": "npm run build && electron build/ui/main.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.35.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.6.2",
    "execa": "^9.5.0",
    "open": "^10.1.0",
    "puppeteer-core": "^23.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "systeminformation": "^5.25.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0",
    "vite": "4.5.0",
    "vitest": "^2.0.0"
  },
  "overrides": {
    "rollup": "3.29.5"
  },
  "build": {
    "appId": "com.clak.sca-01",
    "productName": "SCA-01 The Finisher",
    "files": [
      "build/**",
      "package.json",
      "node_modules/**"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "Clauskraft",
      "repo": "LocalAgentWhybridSkills",
      "releaseType": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "publisherName": "CLAK"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
