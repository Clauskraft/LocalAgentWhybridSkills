{
  "name": "sca-01-phase2",
  "version": "0.2.0",
  "description": "SCA-01 'The Finisher' Phase 2 - Desktop Agent with full PC access",
  "author": "Clauskraft",
  "private": true,
  "type": "module",
  "main": "build/ui/main.cjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:renderer": "vite --config vite.config.ts --host 127.0.0.1",
    "build:main": "tsc -p tsconfig.json && node scripts/write-electron-main-entry.cjs",
    "dev:main": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "dev:preload": "node build-preload.js",
    "dev:preload:watch": "node scripts/preload-watch.mjs",
    "dev:electron": "wait-on tcp:127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 ELECTRON_ENABLE_LOGGING=1 ELECTRON_ENABLE_STACK_DUMPING=1 electron .",
    "dev:ui": "node scripts/dev-ui.mjs",
    "docs:sanity": "node scripts/docs-sanity.mjs",
    "build": "tsc -p tsconfig.json && npm run build:preload && npm run build:renderer",
    "build:preload": "node build-preload.js",
    "build:renderer": "vite build --config vite.config.ts",
    "build:ui": "npm run build && electron-builder",
    "build:ui:dir": "npm run build && electron-builder --win --dir",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run -c vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:smoke:ci": "playwright test tests/e2e/smoke.spec.ts --project=chromium",
    "sca": "node build/cli.js",
    "start": "npm run build:main && npm run build:preload && npm run build:renderer && electron ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "better-sqlite3": "^12.5.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "execa": "^9.5.0",
    "open": "^10.1.0",
    "puppeteer-core": "^23.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "systeminformation": "^5.25.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.49.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "7zip-bin": "^5.2.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0",
    "vite": "4.5.14",
    "vitest": "0.34.6",
    "wait-on": "^8.0.5"
  },
  "overrides": {
    "rollup": "3.29.5"
  },
  "build": {
    "appId": "com.clak.sca-01",
    "productName": "@Dot Agent",
    "files": [
      "build/**",
      "package.json",
      "node_modules/**"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "Clauskraft",
      "repo": "LocalAgentWhybridSkills",
      "releaseType": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}