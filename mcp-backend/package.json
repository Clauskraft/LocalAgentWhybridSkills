{
  "name": "mcp-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Local MCP Backend (Fastify) with real MCP tool execution and Finisher state machine",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node build/server.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:smoke": "vitest run -t \"\\(smoke\\)\"",
    "test:node": "npm run build && node --test build/**/*.node.test.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "fastify": "^4.28.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.51.0",
    "vite": "4.5.0",
    "vitest": "^0.34.6"
  },
  "overrides": {
    "vite": "4.5.0",
    "rollup": "3.29.5"
  }
}


