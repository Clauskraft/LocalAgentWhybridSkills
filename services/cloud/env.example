# Required (production)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# Server
PORT=3000
HOST=::
NODE_ENV=production
TRUST_PROXY=true

# CORS / Rate limit (optional)
# Comma-separated list of allowed web origins (no wildcards).
# Example for local web UI:
# CORS_ORIGINS=http://localhost:5174,http://127.0.0.1:5174
CORS_ORIGINS=
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=1 minute

# LLM upstream (optional)
# Used by /api/chat and /api/models to proxy to an Ollama instance.
# IMPORTANT: Must be reachable from Railway and must NOT be localhost/127.0.0.1.
OLLAMA_HOST=

# Notion (optional)
NOTION_API_KEY=
NOTION_DATABASE_ID=
NOTION_BLACKBOARD_PAGE_ID=


